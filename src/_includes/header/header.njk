{%- if data.alert.show -%}
  {%- if data.alert.dismissable -%}
    <div id="announcement" data-id="global-alert-{{ data.alert.text | sha256 }}" class="alert alert-primary alert-dismissible fade show text-lg-center" role="alert">
      {{- data.alert.text -}}
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  {%- else -%}
    <div class="alert alert-primary text-lg-center" role="alert">
      {{- data.alert.text -}}
    </div>
  {%- endif -%}
{%- endif -%}
